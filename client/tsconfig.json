{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
